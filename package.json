{
  "name": "helloblue-ai",
  "version": "1.0.0",
  "description": "A project to facilitate connecting users to company customer services quickly and efficiently.",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-updates": "ncu",
    "lint:css": "stylelint '**/*.css'",
    "format": "prettier --write '**/*.{html,js,css}'",
    "lint:js": "eslint '**/*.js'",
    "build:css": "postcss style.css -o style.min.css",
    "build": "npm run build:css",
    "start": "npx lite-server --verbose",
    "serve": "serve -s .",
    "prepare": "husky install",
    "dev": "concurrently \"npm run start\" \"npm run watch:css\"",
    "watch:css": "postcss style.css -o style.min.css --watch"
  },
  "author": "Pejman Haghighatnia",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/HelloblueAI/hbLab-B01.git"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cssnano": "^7.0.4",
    "eslint": "^9.7.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "npm-check-updates": "^16.14.20",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "serve": "^14.2.3",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.1"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^3.5.0",
    "braces": "^3.0.3",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-openid-connect": "^2.17.1",
    "glob": "^11.0.0",
    "gotrue-js": "^0.9.29",
    "set-value": "^4.1.0",
    "update": "^0.7.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,html}": "prettier --write"
  },
  "keywords": [
    "customer service",
    "voice AI",
    "company search",
    "automation",
    "web app"
  ]
}
