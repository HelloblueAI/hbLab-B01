{
  "name": "helloblue-ai",
  "version": "1.0.0",
  "description": "A project to facilitate connecting users to company customer services quickly and efficiently.",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "check-updates": "ncu",
    "lint:css": "stylelint '**/*.css'",
    "format": "prettier --write '**/*.{html,js,css}'",
    "lint:js": "eslint '**/*.js'",
    "build:css": "postcss style.css -o style.min.css",
    "build:js": "babel app.js -o app.min.js",
    "build": "npm run build:css && npm run build:js",
    "start": "lite-server --baseDir='.' --verbose",
    "serve": "serve -s .",
    "prepare": "husky install",
    "dev": "concurrently \"npm run start\" \"npm run watch:css\"",
    "watch:css": "postcss style.css -o style.min.css --watch",
    "security": "nsp check",
    "precommit": "lint-staged"
  },
  "author": "Pejman Haghighatnia",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/HelloblueAI/hbLab-B01.git"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "concurrently": "^8.1.0",
    "cssnano": "^7.0.1",
    "eslint": "^9.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "lite-server": "^2.6.1",
    "lint-staged": "^15.2.2",
    "npm-check-updates": "^16.14.17",
    "postcss": "^8.4.24",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^3.5.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-openid-connect": "^2.17.1",
    "gotrue-js": "^0.9.29"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,html}": "prettier --write"
  },
  "keywords": [
    "customer service",
    "voice AI",
    "company search",
    "automation",
    "web app"
  ]
}
